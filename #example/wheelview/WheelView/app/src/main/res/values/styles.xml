<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="wheelViewStyle_time">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="itemNumber">3</item>
        <item name="lineColor">@color/colorAccent</item>
        <item name="lineHeight">1dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#222222</item>
        <item name="normalTextSize">@dimen/text_size_normal</item>
        <item name="selectedTextColor">#222222</item>
        <item name="selectedTextSize">@dimen/text_size_select</item>
        <item name="unitHeight">@dimen/height_small</item>
    </style>


</resources>
