<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.huihui.recyclerview"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".GridRecyclerViewActivity"/>
        <activity android:name=".MTActivity"/>
        <activity android:name=".ItemDecorationActivity"/>
        <activity android:name=".nestedscroll.NestScrollActivity"/>
        <activity android:name=".MTCoordinateActivity"/>
        <activity android:name=".SnapHelperActivity"/>
    </application>

</manifest>